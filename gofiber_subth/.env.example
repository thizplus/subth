# Application Configuration
APP_NAME=GoFiber Template
APP_PORT=3000
APP_ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_db_password
DB_NAME=gofiber_template
DB_SSL_MODE=disable

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Bunny Storage Configuration
BUNNY_STORAGE_ZONE=your-storage-zone-name
BUNNY_ACCESS_KEY=your-bunny-access-key
BUNNY_BASE_URL=https://storage.bunnycdn.com
BUNNY_CDN_URL=https://your-cdn-url.b-cdn.net

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_OUTPUT=both
LOG_FILE=logs/app.log
LOG_MAX_SIZE=100
LOG_MAX_BACKUPS=5
LOG_MAX_AGE=30
LOG_COMPRESS=true

# iDrive E2 Configuration (Source storage for reel sync)
IDRIVE_ENDPOINT=s3.ap-southeast-1.idrivee2.com
IDRIVE_ACCESS_KEY=
IDRIVE_SECRET_KEY=
IDRIVE_BUCKET=
IDRIVE_REGION=ap-southeast-1

# Gemini AI Configuration (for AI-generated titles)
GEMINI_API_KEY=your-gemini-api-key
GEMINI_MODEL=gemini-2.0-flash